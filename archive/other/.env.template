# FLACCID Environment Configuration Template
# Copy this file to .env and fill in your credentials

# Qobuz Configuration
QOBUZ_APP_ID=your_qobuz_app_id_here
QOBUZ_TOKEN=your_qobuz_auth_token_here

# Apple Music Configuration
APPLE_TOKEN=your_apple_music_developer_token_here
APPLE_STORE=us  # Apple Music store region (us, gb, de, etc.)

# Tidal Configuration (if implementing in the future)
TIDAL_TOKEN=your_tidal_token_here

# Spotify Configuration (if implementing in the future)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# General Configuration
FLACCID_LOG_LEVEL=INFO
FLACCID_CACHE_DIR=~/.flaccid/cache
FLACCID_CONFIG_DIR=~/.flaccid/config
